<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="br.com.petservicos.dao.animal.AnimalDao">
 
    <resultMap id="animal" type="Animal">
        <id property="id" column="id"/>
        <result property="nome" column="nome"/>
        <result property="sexo" column="sexo" typeHandler="br.com.petservicos.business.utilitarios.typehandler.SexoTypeHandler"/>
        <result property="dataNasc" column="data_nasc"/>
        <result property="raca.id" column="id_raca"/>
        <result property="cliente.id" column="id_cliente"/>
    
    </resultMap>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
    <select id="select" parameterType="Animal" resultMap="animal">
        select * 
        from petservicos.animal
        <where>
            <if test="id != null and id != ''">
                 and id = #{id} 
            </if> 
            <if test="nome != null and nome!= ''">
                 and upper(nome) like upper('%'||coalesce(#{nome},'')||'%') 
            </if>  
            <if test="sexo != null">
                and sexo = #{sexo, typeHandler=br.com.petservicos.business.utilitarios.typehandler.SexoTypeHandler}
            </if> 
            <if test="dataNasc != null">
                 and data_nasc = #{dataNasc} 
            </if>  
            <if test="raca != null and raca.id != null">
                 and id_raca = #{raca.id} 
            </if>   
            <if test="cliente != null and cliente.id != null">
                 and id_cliente = #{cliente.id} 
            </if>  
        </where>
        order by nome
    </select>
    
    <update  id="update" parameterType="Animal">
        update petservicos.animal
        set id = #{id},
            nome = #{nome},
            sexo=#{sexo, typeHandler=br.com.petservicos.business.utilitarios.typehandler.SexoTypeHandler},
            data_nasc = #{dataNasc},
            id_raca = #{raca.id},
            id_cliente = #{cliente.id}
        where id=#{id}     
    </update>
    
    <delete  id="delete" parameterType="Animal">
        delete from petservicos.animal where id=#{id}
    </delete>
    
    <insert  id="insert" parameterType="Animal">
       insert 
        into petservicos.animal
            (id,nome,sexo,data_nasc,id_raca,id_cliente)
      values(#{id}
             #{nome},
             #{sexo,typeHandler=br.com.petservicos.business.utilitarios.typehandler.SexoTypeHandler}
             #{dataNasc},
             #{raca.id},
             #{cliente.id}
            )
    </insert>
</mapper>